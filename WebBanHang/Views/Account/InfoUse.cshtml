@model WebBanHang.Models.Emtity.Custormer

@{
    ViewBag.Title = "InfoUse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Thông tin tài khoản</h1>
                <nav class="d-flex align-items-center">
                    <nav class="d-flex align-items-center">
                        <a href="/Home/Index">Trang chủ<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/Account/InfoUse">Thông Tin Tài Khoản</a>
                    </nav>
                </nav>
            </div>
        </div>
    </div>
</section>>
<form action="/Account/EditPassWord" method="post">
    <div class="product_image_area p-5">

        <div class="container">



            <h4>Thông tin tài khoản</h4>
            <span class="text-danger">@ViewBag.Eror</span>
            <div class="form-group">

                <label class="text-body p-3"> Email</label>
                <div class="col-md-10">
                    <input disabled class="form-control" value="@Model.email" />

                </div>
            </div>
            <div class="form-group">

                <label class="text-body p-3"> Họ Tên</label>
                <div class="col-md-10">
                    <input disabled class="form-control" value="@Model.name" />

                </div>
            </div>

            <div class="form-group">

                <label class="text-body p-3"> Mật khẩu cũ</label>
                <div class="col-md-10">
                    <input type="password" disabled class="form-control" value="@Model.password" />

                </div>
            </div>
            <div class="form-group">

                <label class="text-body p-3"> Mật khẩu mới</label>
                <div class="col-md-10">
                    <input required name="NewPass" type="password" class="form-control" />

                </div>
            </div>
            <div class="form-group">

                <label class="text-body p-3">Nhập lại mật khẩu mới</label>
                <div class="col-md-10">
                    <input required name="ConfirmPassword" type="password" class="form-control" />

                </div>
            </div>
        </div>
        <p class="ml-5">
            <button class="" type="submit" style="border:none">Đổi mật khẩu</button>
            |
            @Html.ActionLink("Quay lại", "Index", "Home")
        </p>


    </div></div>
</form>